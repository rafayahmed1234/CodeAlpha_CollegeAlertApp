        <shape android:shape="rectangle">
            <gradient
                android:startColor="#AD1457"
                android:endColor="#C2185B"
                android:angle="45" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E91E63"
                android:endColor="#EC407A"
                android:angle="45" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</selector>