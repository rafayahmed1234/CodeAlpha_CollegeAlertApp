<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- Animated Background Elements -->
    <View
        android:id="@+id/circle1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"
        android:background="@drawable/circle_shape_1"
        android:alpha="0.3" />

    <View
        android:id="@+id/circle2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-75dp"
        android:layout_marginStart="-75dp"
        android:background="@drawable/circle_shape_2"
        android:alpha="0.4" />

    <!-- Main Content Container -->

    <!-- Bottom Branding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- Logo Container with Shadow -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@drawable/logo_container_background"
            android:elevation="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="15dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_college" />

            <!-- App Icon Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="ðŸ“š"
                android:textSize="48sp" />

        </LinearLayout>

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#1A237E"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="8"
            android:text="College Alert"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:alpha="0.9"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Stay Connected, Stay Informed"
            android:textColor="#E8EAF6"
            android:textSize="18sp" />

        <!-- Loading Animation Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Loading Dots -->
            <View
                android:id="@+id/dot1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/loading_dot" />

            <View
                android:id="@+id/dot2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/loading_dot" />

            <View
                android:id="@+id/dot3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/loading_dot" />

        </LinearLayout>

        <!-- Loading Text -->
        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:fontFamily="sans-serif-light"
            android:text="Loading..."
            android:textColor="#C5CAE9"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by Innovation"
            android:textSize="12sp"
            android:textColor="#9FA8DA"
            android:fontFamily="sans-serif-light"
            android:alpha="0.7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textSize="10sp"
            android:textColor="#9FA8DA"
            android:fontFamily="sans-serif-light"
            android:alpha="0.5"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</RelativeLayout>