<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme - Updated with notification colors -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange_primary</item>
        <item name="colorSecondaryVariant">@color/orange_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Theme without action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Optional: Dark theme variant -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/orange_primary</item>
        <item name="colorSecondaryVariant">@color/orange_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Campus Alert Themes -->
    <style name="Theme.CampusAlert.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#8B5FBF</item>
        <item name="colorPrimaryVariant">#6A4C9C</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <style name="Theme.CampusAlert.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#8B5FBF</item>
        <item name="colorPrimaryVariant">#6A4C9C</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:windowBackground">#121212</item>
    </style>

    <!-- Calendar Styles -->
    <style name="CalenderDateText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#2E3A59</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalenderWeekText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/primary_purple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Image View Style -->
    <style name="RoundedImageView" />



</resources>